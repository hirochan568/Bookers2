

<h3>books index</h3>
<% if @book.errors.any? %>
<%= @book.errors.count %>件のエラーが発生しました
<% @book.errors.full_messages.each do |message| %>
 <li><%= message %></li>
 <% end %>
<% end %>




<h2>Books</h2>
<table class='table table-hover table-inverse'>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
   <th colspan="3"></th>
  </tr>
  <% @books.each do |book| %>
   <tr>
    <td><%= link_to user_path(book.user_id) do %>
     <%= attachment_image_tag book.user, :profile_image, :size, 30, 30, fallback: "no_image.jpg",size:'30x30',format: 'no_image.jpg' %></td>
     <% end %>
     <td><%= link_to book.title, book_path(book.id)%></td>
     <td><%= book.body %></td>
   </tr>
     <% end %>
</table>