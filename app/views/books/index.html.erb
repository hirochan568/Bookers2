<h3>books index</h3>

<h2>User info</h2>
   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
   <h5>name</h5>
   <%= @user.name %>
   <h5>introduction</h5>
   <%= @user.introduction %>
   <%= link_to"",edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>


<h2>New book</h2>
<%= form_with model: @book, local: true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_field :body %>
 <%= f.submit 'Create Book' %>
<% end %>


<h2>Books</h2>
<table class='table table-hover table-inverse'>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
   <th colspan="3"></th>
  </tr>
  <% @books.each do |book| %>
   <tr>
    <td><%= link_to user_path(book.user_id) do %>
     <%= attachment_image_tag book.user, :profile_image, :size, 30, 30, fallback: "no_image.jpg",size:'30x30',format: 'no_image.jpg' %></td>
     <% end %>
     <td><%= link_to book.title, book_path(book.id)%></td>
     <td><%= book.body %></td>
   </tr>
     <% end %>
</table>