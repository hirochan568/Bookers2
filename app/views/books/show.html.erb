<%= flash[:notice] %>
<% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>


<h2>User info</h2>
  <%= attachment_image_tag @book.user, :profile_image, :size, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
  <h5>name</h5>
  <%= @user.name %>
  <h5>introduction</h5>
  <%= @user.introduction %>
  <%= link_to"",edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench"%>

<h2>New book</h2>
<%= form_with model: @newbook,  url: books_path, local: true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_field :body %>
 <%= f.submit 'Create Book' %>
<% end %>



<h2>Book detail</h2>

<table >
    <tr>
    <td>
      <%= link_to user_path(@book.user_id) do %>
      <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:'50x50',format: 'no_image.jpg' %>
      <nav><%= @book.user.name %></nav>
      <% end %>
    </td>
    <td><%= link_to @book.title, book_path(@book.id) %></td>
    <td><%= @book.body %></td>
    <% if @book.user_id == current_user.id %>
    <td><%= link_to "edit", edit_book_path(@book.id) %></td>
    <td><%= link_to "destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    <% end %>
    </tr>
</table>
