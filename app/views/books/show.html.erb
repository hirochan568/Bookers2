    <%= flash[:notice] %>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>

<div class="container">
	<div class="row">
    <div class="col-md-3">
      <%= render 'layouts/list',user: @user,book: @newbook %>
    </div>
    <div class= "col-xs-9">
      <h2>Book detail</h2>
      <table >
        <tr>
        <td>
          <%= link_to user_path(@book.user_id) do %>
          <%= attachment_image_tag @book.user, :profile_image, :size, 50, 50, fallback: "no_image.jpg",size:'50x50',format: 'no_image.jpg' %>
          <nav><%= @book.user.name %></nav>
          <% end %>
        </td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @book.user_id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :delete,  class:"btn-sm btn-danger destroy(@book.id)","data-confirm" => "本当に削除しますか？" %></td>
        <% end %>
        </tr>
      </table>
    </div>
</div>