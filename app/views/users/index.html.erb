<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/list', user: @user, book: @book %>

      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class='table table-hover table-inverse'>
           <thead>
    				<tr>
    					<th>Image</th>
    					<th>Name</th>
    					<th></th>
    				</tr>
    			</thead>
          <% @users.each do |user| %>

          <tr>
          <td><%= attachment_image_tag user, :profile_image, :size, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %></td>
          <td><%= user.name %><td>
          <td><%= link_to"Show",user_path(user.id) %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>