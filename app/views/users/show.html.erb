<%= flash[:notice] %>
<div class="container px-5 px-sm-0">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <%= render 'layouts/list', user: @user, book: @book %>
        </div>

      <div class= "col-md-8 col-xs-9 offset-md-1">
        <h2>Books</h2>

        <table class='table table-hover table-inverse'>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>

          <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, :size, 30, 30, fallback: "no_image.jpg",size:'30x30',format: 'no_image.jpg' %></td>
            <td><%=link_to book.title, book_path(book.id)%></td>
            <td><%= book.body %></td>
          </tr>
           <% end %>
        </table>
  </div>
</div>