<% if @user.errors.any? %>
	<h3><%= pluralize(@user.errors.count, "error") %>&nbsp;prohibited this user from being saved:</h3>
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
<% end %>

<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>User   info</h2>

<%= form_for(@user, url: user_path(current_user.id)) do |f| %>
    <div class="form-group">Name
    <div><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></div></div>
    <div class="form-group">Image
    <div><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></div></div>
    <div class="form-group">Introduction
    <div><%= f.text_area :introduction %></div></div>
    <div class="form-group">
   <%= f.submit "Update User" , class: "btn btn-secondary" %>
  </div>
<% end %>

</div>
</div>
</div>