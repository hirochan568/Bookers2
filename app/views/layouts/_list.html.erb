
	<div class="profile-container"><h2>User info</h2>
   <%= attachment_image_tag user, :profile_image, :size, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
    <table class="table">
      </tbody>
        <tr>
         <th>name</th>
         <th><%= user.name %></th>
        </tr>
        <tr>
         <th>introduction</th>
         <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row">
		<% if user.id == current_user.id %>
    <p><%= link_to"edit",edit_user_path(user.id), class:"edit_user_#{user.id} col-xs-12 btn btn-default glyphicon glyphicon-wrench"%></p>
    <% end %>
  </div>


  	<h2>New book</h2>
<%= form_with model: book, local: true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_field :body %>
 <%= f.submit 'Create Book' %>
<% end %>